<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steve.blereader.MainActivity">

    <Button
        android:id="@+id/ControlButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick_Search"
        android:text="Start" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ControlButton"
        android:text="Enable TCP " />


    <EditText
        android:id="@+id/ipad_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        android:text="192.168.3.11"
        android:inputType="text"

        />


    <EditText
        android:id="@+id/ipport_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ipad_text"
        android:text="6666"
        android:inputType="number"/>

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:text="Hello World!"

        app:layout_constraintTop_toBottomOf="@+id/ipport_text"
        />
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->


</android.support.constraint.ConstraintLayout>
